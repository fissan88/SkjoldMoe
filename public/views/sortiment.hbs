<div class="row">
    <div class="col-sm-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h1 class="panel-title">Sortiment</h1>
            </div>
            <div class="panel-body" style="max-height: 200px; overflow-y:scroll;">
                <div class="list-group" id="stockList">
                </div>
            </div>
        </div>

            <div class="input-group">
                <input id="search" type="text" class="form-control input-lg" placeholder="Søg efter...">
                <span class="input-group-btn">
        <button class="btn btn-success glyphicon glyphicon-search" type="button" style="margin-bottom: 15px"></button>
      </span>
            </div><!-- /input-group -->
            <button type="button" class="btn btn-success btn-block" style="margin-bottom: 15px">Scan</button>
    </div>

    <div class="col-sm-6">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h1 class="panel-title">Opret ny vare</h1>
            </div>
            <div class="panel-body">
                <input class="form-control" type="text" placeholder="Varenavn" id="newProductName" style="margin-bottom: 10px">
                <input class="form-control" type="text" placeholder="Stregkode" id="newProductBarcode" style="margin-bottom: 15px">
                <input class="form-control" type="text" placeholder="Bestillingsnummer" id="newProductOrderNumber" style="margin-bottom: 15px">
                <input type="checkbox" name="isDryGoods" value="isDryGoods" id="isDryGoods" style="margin-bottom: 15px"> Er tørvare?
                <button type="button" class="btn btn-success btn-block" id="btnCreateProduct">Opret</button>
            </div>
        </div>
    </div>
    <div class="modal" id="editGoodsModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title">Rediger Vare</h4>
                </div>
                <div class="modal-body" style="position: static">
                    <div class="form-group">

                        <label for="barcode">Stregkode:</label>
                        <input type="text" class="form-control" id="barcodeModal" disabled="disabled">

                    </div>

                    <div class="form-group">

                        <label for="name">Navn:</label>
                        <input type="text" class="form-control" id="nameModal">

                    </div>

                    <label class="checkbox-inline">

                        <input type="checkbox" value="" id="chbIsDryGoodsModal">Er tørvare?

                    </label>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal" id="btnOpdaterModal">Opdater
                    </button>
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->
</div>