<div  class="row">
    <div class="col-sm-3">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h1 class="panel-title">Nærtudløbne Varer</h1>
            </div>
            <div class="panel-body">
                <table>
                    <tr><td>Navn</td><td>Udløbsdato</td><td>Antal</td></tr>
                    {{#each vareListe}}
                        <tr>
                            <td>{{vareNavn}}</td><td>{{udløbsDato}}</td><td>{{antal}}</td>
                        </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
    <div class="col-sm-3 text-center">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h1 class="panel-title">Scan</h1>
            </div>
            <div class="panel-body" id="scanPic">
                <button class="btn btn-circle btn-xl btn-success" type="button" data-toggle="modal"
                        data-target="#livestream_scanner">
                    <i class="glyphicon glyphicon-barcode"></i>
                </button>
                <input id="scanner_input" class="form-control" placeholder="Klik på knappen for at scanne..."
                       type="text"/>
                <div class="modal" id="livestream_scanner">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                                <h4 class="modal-title">Scan Stregkode</h4>
                            </div>
                            <div class="modal-body" style="position: static">
                                <div id="interactive" class="viewport"></div>
                                <div class="error"></div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-success" data-dismiss="modal">Luk</button>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h1 class="panel-title">Info</h1>
            </div>
            <div class="panel-body">
                <input type="number" placeholder="Vælg Antal">
            </div>
        </div>
        <button type="button" class="btn btn-success btn-block">Godkend</button>
    </div>
    <div class="col-sm-3">
        <div class="panel panel-success">
            <div class="panel-heading">
                <h1 class="panel-title">Varebillede</h1>
            </div>
            <div class="panel-body">
            </div>
        </div>
    </div>
</div>